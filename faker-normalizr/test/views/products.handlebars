<h2 style='text-align:center; margin:50px'>Test Products</h2>

{{#if productsExist}}
<div class='table-responsive' style='margin-right: 200px; margin-left: 200px;'>
    <table class='table table-dark'>
        <thead>
            <tr style='color: yellow;'>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.name}}
                </td>
                <td>
                    {{this.description}}
                </td>
                <td>
                    <img  src={{this.image}} alt={{this.name}} style='width:100px;'/>                
                </td>
                <td>
                    ${{this.price}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<h3 class='alert alert-danger'>No products found</h3>
{{/if}}