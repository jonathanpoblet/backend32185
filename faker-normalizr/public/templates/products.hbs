<h2 style='color:blue;'>Products</h2>

{{#if products.length}}
<div class='table-responsive'>
    <table class='table table-dark'>
        <tr style='color: yellow;'>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Price</th>
        </tr>
        {{#each products}}
        <tr>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                <img style='width:100px;' alt='{{this.name}}' src='{{this.image}}'/>
            </td>
            <td>
                {{this.price}}
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<h3 class='alert alert-danger'>No products found</h3>
{{/if}}